{
  "name": "sightmap",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.8.2",
      "@trpc/server": "^11.5.0",
      "better-auth": "^1.3.13",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5",
      "@trpc/client": "^11.5.0",
      "@prisma/client": "^6.15.0"
    }
  },
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "dev:server": "bun run --filter server dev",
    "db:push": "bun run --filter @sightmap/db db:push",
    "db:studio": "bun run --filter @sightmap/db db:studio",
    "db:generate": "bun run --filter @sightmap/db db:generate",
    "db:migrate": "bun run --filter @sightmap/db db:migrate"
  },
  "packageManager": "bun@1.3.0",
  "dependencies": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "tsdown": "^0.15.5",
    "@types/bun": "^1.2.6"
  }
}
